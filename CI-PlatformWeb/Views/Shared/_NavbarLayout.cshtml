                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                City
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (var city in ViewBag.cities)
                                {
                                    <li>
                                        <a class="dropdown-item dd-color">
                                            <div class="form-check">
                                                <input class="form-check-input" name="city" type="checkbox" value=@city.Name id=@city.CityId onchange="updateUrlForCities()" />
                                                <label class="form-check-label" for=@city.CityId>@city.Name</label>
                                            </div>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Theme
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (var theme in ViewBag.themes)
                                    {
                                        <li>
                                            <a class="dropdown-item dd-color" >
                                                <div class="form-check">
                                                    <input class="form-check-input" name="theme" type="checkbox" value=@theme.Title id=@theme.MissionThemeId onchange="updateUrlForTheme()" />
                                                <label class="form-check-label" for=@theme.MissionThemeId>@theme.Title</label>
                                                </div>
                                            </a>
                                        </li>
                                    }
                            </ul>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Skill
                            </a>
                            <ul class="dropdown-menu">
                               @foreach (var skill in ViewBag.skills)
                                {
                                    <li>
                                        <a class="dropdown-item dd-color">
                                            <div class="form-check">
                                                <input class="form-check-input" name="city" type="checkbox" value=@skill.Skill id=@skill.MissionSkillId onchange="updateUrlForCities()" />
                                                <label class="form-check-label" for=@skill.MissionSkillId>@skill.Skill</label>
                                            </div>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </div>
                </div>

                <div class="seconddiv col-lg-6 col-md-7">
                    <ul class="navbar-nav">


                        <li class="nav-item col-lg-3 col-md-3  dropdown filterdiv">
                            <a class="nav-link dropdown d-flex" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <p class="me-auto mt-1"> Country </p>
                                <img src="~/images/drop-down.png" height="10%" width="10%" class="mt-3 ">

