
@{
    Layout = "_One-NavbarLayout";
    ViewData["Title"] = "Home Page";
}
@{
    var userid = Context.Session.GetInt32("userIDforfavmission");
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing Page</title>
    <link rel="stylesheet" href="~/css/landing-page.css" />
    <link rel="stylesheet" href="~/css/storyListing.css" asp-append-version="true" />






</head>

<body>

    <div class="container" style="margin-top:110px">
        <div class="filters-section d-flex align-items-center flex-wrap justify-content-center">
        </div>
        <div class="addstorybg mt-3" style="height: 390px;">
        <div class="centered">
            <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Exercitationem perferendis error recusandae temporibus neque officiis impedit repellendus laboriosam id delectus. Lorem ipsum dolor, sit amet.</p>
                @if(userid != null)
                {
                    <div class="centeredbtn text-center">
                        <a asp-action="StoryShare" asp-controller="Home" class="btn text-decoration-none" style="color: white;">Share your story <img src="~/Images/right-arrow.png" alt=""></a>
                    </div>
                }
                else
                {
                    <div class="centeredbtn text-center">
                        <a onclick="alertforlogin()" class="btn text-decoration-none" style="color: white;">Share your story <img src="~/Images/right-arrow.png" alt=""></a>
                    </div>
                }


        </div>
      </div>

        @*-----------------------------------------------------------------------------*@
        <div class="album py-5 bg-light">
            <div class="container">
                
                <div class="row  row-cols-1 row-cols-sm-2  row-cols-lg-2 row-cols-xl-3 g-3">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="card shadow-sm" style="width:98%; height:100%;">
                                <div class="img-event">
                                    @if (item.storypath != null )
                                    {
                                        <img class="card-img-top storyimg " id="cardBanner"
                                     src="@item.storypath" alt="Card image ca">
                                    }
                                    else
                                    {
                                        <img class="card-img-top storyimg" id="cardBanner"
                                     src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-1.png" alt="Card image capsssssssssssssss">
                                    }

                                    
                                    <div class="ABC position-absolute top-0 start-0" style="height:100%; width:100%;">
                                        <a class="btn-view  rounded-5 py-1 px-1 px-sm-4 px-lg-4 position-absolute top-50 start-50 translate-middle" href="/Home/StoryDetail/@item.UserId?storyid=@item.StoryId">
                                            View Details
                                            <i class="bi bi-arrow-right  "></i>

                                        </a>
                                    </div>
                                    <button class="theme-btn position-absolute top-100 start-50 translate-middle border-2" style="">@item.Theme</button>
                                </div>
                                <div class="card-body">
                                    <p class="card-title">
                                        @item.StoryTitle
                                    </p>
                                    <div style="overflow: hidden;display: -webkit-box;-webkit-line-clamp:5;-webkit-box-orient: vertical;">
                                        <p class="card-text">
                                            @Html.Raw(item.Description)
                                        </p>
                                    </div>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        @*<div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                    </div>
                                    <small class="text-muted">9 mins</small>*@
                                        <div class="d-flex me-auto mt-2 align-items-center ">
                                            @if (item.avtarpath != "")
                                            {
                                                <img src="@item.avtarpath" class="storyuserphoto" />
                                            }
                                            else
                                            {
                                                <img src="~/Images/user1.png" class="storyuserphoto" />
                                            }

                                                <lable class="ms-2" id="">@item.UserName</lable>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    
                    


                </div>
                <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-3">
                    <ul class="pagination">
                        @if (@ViewBag.currentUrl.Contains('?'))
                        {
                            <li class="page-item @(ViewBag.CurrentPage == 0 ? "disabled" : "")">
                                <a class="page-link" href="@ViewBag.currentUrl&pageIndex=0" aria-label="Previous">
                                    <span aria-hidden="true">FirstPage</span>
                                </a>
                            </li>
                            <li class="page-item @(ViewBag.CurrentPage == 0 ? "disabled" : "")">
                                <a class="page-link" href="@ViewBag.currentUrl&pageIndex=@(ViewBag.CurrentPage - 1)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @for (int i = 0; i < ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@ViewBag.currentUrl&pageIndex=@i">@((i + 1).ToString())</a>
                                </li>
                            }
                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages - 1 ? "disabled" : "")">
                                <a class="page-link" href="@ViewBag.currentUrl&pageIndex=@(ViewBag.CurrentPage + 1)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages - 1 ? "disabled" : "")">
                                <a class="page-link" href="@ViewBag.currentUrl&pageIndex=@(ViewBag.TotalPages-1)" aria-label="Next">
                                    <span aria-hidden="true">LastPage</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item @(ViewBag.CurrentPage == 0 ? "disabled" : "")">
                                <a class="page-link" href="@ViewBag.currentUrl?pageIndex=0" aria-label="Previous">
                                    <span aria-hidden="true">FirstPage</span>
                                </a>
                            </li>
                            <li class="page-item @(ViewBag.CurrentPage == 0 ? "disabled" : "")">
                                <a class="page-link" href="@ViewBag.currentUrl?pageIndex=@(ViewBag.CurrentPage - 1)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @for (int i = 0; i < ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@ViewBag.currentUrl?pageIndex=@i">@((i + 1).ToString())</a>
                                </li>
                            }
                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages - 1 ? "disabled" : "")">
                                <a class="page-link" href="@ViewBag.currentUrl?pageIndex=@(ViewBag.CurrentPage + 1)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages - 1 ? "disabled" : "")">
                                <a class="page-link" href="@ViewBag.currentUrl?pageIndex=@(ViewBag.TotalPages-1)" aria-label="Next">
                                    <span aria-hidden="true">LastPage</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>

            </div>
        </div>
        
    
</body>
<script>
    function viewdetails() {
        location.replace("Login.cshtml");
    }
    function alertforlogin() {
        Swal.fire({
            position: 'top-end',
            icon: 'warning',
            width: '300',
            height: '100',
            title: 'Please Login or Register First',
            showConfirmButton: false,
            timer: 1500
        })
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/filter.js"></script>
<script src="~/js/Volunteering.js"></script>

</html>

