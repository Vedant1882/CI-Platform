@model CI_PlatformWeb.Models.UserProfileViewModel@{    Layout = "_One-NavbarLayout";
    var allskills = ViewBag.allskills;
    var firstname = Context.Session.GetString("UserID");
    var lastname = Context.Session.GetString("lastname");}<!DOCTYPE html><html lang="en"><head>    <meta charset="UTF-8">    <meta http-equiv="X-UA-Compatible" content="IE=edge">    <meta name="viewport" content="width=device-width, initial-scale=1.0">    <title>Document</title>    <link rel="stylesheet" href="~/css/userProfile.css" asp-append-version="true" />    <script src="~/lib/jquery/dist/jquery.min.js"></script></head><body>    <div>        @if (TempData["saveuser"] != null)
        {            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>            <script>                Swal.fire({                    position: 'top-end',                    width: '300',                    height: '100',                    icon: 'success',                    title: 'Profile Updated',                    showConfirmButton: false,                    timer: 2500                })            </script>        }    </div>    <div class="container" style="margin-top:70px">        <form asp-action="UserProfile" asp-controller="Home" method="post" enctype="multipart/form-data">            <div class="row">                <div class="col-12 col-md-3 col-lg-2 user-profile-left-div d-flex flex-column align-items-center justify-content-center">                    <div class="d-flex flex-column align-items-center justify-content-center">                        <div class="user-profile-div" >                            <input type="file" asp-for="files" name="files" style="display:none;" id="imgInput" />                            @if(Model.avatar=="" || Model.avatar == null)
                            {                                <img src="~/Images/user1.png" alt="" class="rounded-circle user-profile-img" id="user-profile-img">
                            }
                            else
                            {                                <img src=@Model.avatar alt="" class="rounded-circle user-profile-img" id="user-profile-img">                            }                            <i class="bi bi-pencil-square" id="imgDiv"></i>                        </div>                        <div class="user-username">@firstname @lastname</div>                        <div class="">                            <!-- Button trigger modal -->                            <button class="  bg-white border-0 border-white user-change-pass-link" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">                                Change Password                            </button>                            <!-- Modal -->                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">                                <div class="modal-dialog">                                    <div class="modal-content">                                        <div class="modal-header">                                            @if (ViewBag.samePas != null)
                                            {                                                <h1>@ViewBag.samePas</h1>                                            }                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Change Password</h1>                                            <button type="button" class=" bg-white border-0" data-bs-dismiss="modal" id="close1" aria-label="Close">                                                <i class="bi bi-x-lg"></i>                                            </button>                                        </div>                                        <div class="modal-body">                                            <input type="password" id="inputPassword1" class=" form-control  mb-3" aria-labelledby="passwordHelpBlock" placeholder="Enter old Password">                                            <input type="password" id="inputPassword2" class=" form-control  mb-3" aria-labelledby="passwordHelpBlock" placeholder="Enter new Password">                                            <input type="password" id="inputPassword3" class="form-control  boxborder" aria-labelledby="passwordHelpBlock" placeholder="Enter confirm Password">                                        </div>                                        <div class="modal-footer">                                            <button type="button" class=" user-password-cancel-btn bg-white py-1 px-2" data-bs-dismiss="modal">                                                Cancel                                            </button>                                            <button type="button" class=" user-password-change-btn bg-white py-1" onclick="changepass()">                                                Change                                                Password                                            </button>                                        </div>                                    </div>                                </div>                            </div>                        </div>                    </div>                </div>                <div class="col-12 col-md-9 col-lg-10">                    <div class="mb-3">                        <div class="user-edit-header-1">Basic Information</div>                        <hr>                        <div class="row">                            <div class="mb-3 col-12 col-md-6">                                <label for="exampleFormControlInput1" class="form-label">Name*</label>                                <input type="text" asp-for="firstname" class="form-control" id="exampleFormControlInput1" placeholder="Enter your name">                            </div>                            <div class="mb-3 col-12 col-md-6">                                <label for="exampleFormControlInput1" class="form-label">Surname*</label>                                <input type="text" asp-for="lastname" class="form-control" id="exampleFormControlInput1" placeholder="Enter your surname">                            </div>                            <div class="mb-3 col-12 col-md-6">                                <label for="exampleFormControlInput1" class="form-label">Employee ID</label>                                <input type="text" class="form-control" asp-for="employeeid" id="exampleFormControlInput1" placeholder="Enter your employee id">                            </div>                            <div class="mb-3 col-12 col-md-6">                                <label for="exampleFormControlInput1" class="form-label">Title</label>                                <input type="text" class="form-control" asp-for="title" id="exampleFormControlInput1" placeholder="Enter a title">                            </div>                            <div class="mb-3 col-12 col-md-6">                                <label for="exampleFormControlInput1" class="form-label">Department</label>                                <input type="text" class="form-control" asp-for="department" id="exampleFormControlInput1" placeholder="Enter your department details">                            </div>                            <div class="mb-3">                                <label for="exampleFormControlTextarea1" class="form-label">My Profile*</label>                                <textarea class="form-control" asp-for="myprofile" id="exampleFormControlTextarea1" rows="3" placeholder="Enter your comments"></textarea>                            </div>                            <div class="mb-3">                                <label for="exampleFormControlTextarea1" class="form-label">Why I Volunteer?</label>                                <textarea class="form-control" asp-for="whyivolunteered" id="exampleFormControlTextarea1" rows="3" placeholder="Enter your comments"></textarea>                            </div>                        </div>                    </div>                    <div class="mb-3">                        <div class="user-edit-header-1">Adderss Information</div>                        <hr>                        <div class="row">                            <div class="col-12 col-md-6">                                <label for="exampleFormControlTextarea1" class="form-label">Country*</label>                                <select class="form-select " asp-for="countryid" aria-label="Default select example" id="user-country">                                    <option selected disabled>select your country</option>                                    @foreach (var country in ViewBag.allcountry)
                                    {                                        <option value=@country.CountryId>@country.Name</option>                                    }                                </select>                            </div>                            <div class="mb-3 col-12 col-md-6">                                <label for="exampleFormControlInput1" class="form-label">City</label>                                <select class="form-select " asp-for="cityid" aria-label="Default select example" id="user-city">                                    <option selected disabled>select your city</option>                                    @foreach (var city in ViewBag.allcities)
                                    {                                        <option value=@city.CityId>@city.Name</option>                                    }                                </select>                            </div>                        </div>                    </div>                    <div class="mb-3">                        <div class="user-edit-header-1">Personal Information</div>                        <hr>                        <div class="row">                            <div class="col-12 col-md-6">                                <label for="exampleFormControlTextarea1" class="form-label">Availablity</label>                                <select class="form-select " asp-for="availability" aria-label="Default select example" id="user-country">                                    <option selected disabled>select your availablity</option>                                    <option value="Daily">Daily</option>                                    <option value="Weekly">Weekly</option>                                    <option value="Monthly">Monthly</option>                                </select>                            </div>                            <div class="mb-3 col-12 col-md-6">                                <label for="exampleFormControlInput1" class="form-label">LinkedIn</label>                                <input type="text" class="form-control" asp-for="linkedinurl" id="exampleFormControlInput1" placeholder="Enter LinkedIn url">                            </div>                        </div>                    </div>                    <div class="mb-3">                        <div class="user-edit-header-1">My Skills</div>                        <hr>                        <div class="user-skill-list-div" id="userskilldiv">                            <ul class="user-skills-list">                                @if (ViewBag.userskills != null)
                                {                                    @foreach (var item in ViewBag.userskills)
                                    {                                        <li>@item.SkillName</li>                                    }                                }                            </ul>                        </div>                        <button type="button" class="user-add-skills-btn" data-bs-toggle="modal" data-bs-target="#addskillmodal">                            Add                            Skills                        </button>                        <!-- Modal -->                        <div class="modal fade" id="addskillmodal" tabindex="-1" aria-labelledby="addskillmodalLabel" aria-hidden="true">                            <div class="modal-dialog modal-lg">                                <div class="modal-content">                                    <div class="modal-header">                                        <h1 class="modal-title fs-5" id="addskillmodalLabel">Add your skills</h1>                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>                                    </div>                                    <div class="modal-body">                                        <div class="container  p-0">                                            <br />                                            <div class="row d-flex m-0 p-0">                                                <select multiple style="height:300px;" id="s1" class="  px-0 col-12 col-md-5 ">                                                    @if (ViewBag.userskills != null)
                                                    {                                                        @foreach (var it in ViewBag.remainingSkills)
                                                        {                                                            <option value=@it.SkillId>@it.SkillName</option>                                                        }                                                    }
                                                    else
                                                    {                                                        @if (ViewBag.allskills != null)
                                                        {                                                            @foreach (var i in ViewBag.allskills)
                                                            {                                                                <option value=@i.SkillId>@i.SkillName</option>                                                            }                                                        }                                                    }                                                </select>                                                <div class="col-2 mt-5  px-2 d-md-block d-none flex-column ">                                                    <div class="mt-3 d-flex justify-content-center align-items-center ">                                                        <i class="bi bi-chevron-right py-2  px-1 skillimg" id="t1 " onclick="ved1()"></i>                                                    </div>                                                    <div class="mt-1  d-flex justify-content-center align-items-center">                                                        <i class="bi bi-chevron-left skillimg py-2  px-1" id="t2" onclick="ved2()"></i>                                                    </div>                                                    <div class="mt-1  d-flex justify-content-center align-items-center">                                                        <i class="bi bi-chevron-double-right skillimg py-2  px-1" id="t3" onclick="ved3()"></i>                                                    </div>                                                    <div class="mt-1  d-flex justify-content-center align-items-center">                                                        <i class="bi bi-chevron-double-left skillimg py-2 px-1 " id="t4" onclick="ved4()"></i>                                                    </div>                                                </div>                                                <div class="col-12 my-2 d-flex justify-content-center  align-items-center d-block d-md-none   px-2">                                                    <i class="bi bi-chevron-down  p-2 skillimg" id="t1 " onclick="ved1()"></i>                                                    <i class="bi bi-chevron-up skillimg p-2 ms-2" id="t2" onclick="ved2()"></i>                                                    <i class="bi bi-chevron-double-down skillimg px-2 ms-2" id="t3" onclick="ved3()"></i>                                                    <i class="bi bi-chevron-double-up skillimg px-2 ms-2" id="t4" onclick="ved4()"></i>                                                </div>                                                <select multiple id="s2" style="height:300px;" class=" px-0 col-12 col-md-5 ">                                                    @if (ViewBag.userskills != null)
                                                    {                                                        @foreach (var it in ViewBag.userskills)
                                                        {                                                            <option value=@it.SkillId>@it.SkillName</option>                                                        }                                                    }                                                </select>                                            </div>                                        </div>                                    </div>                                    <div class="modal-footer d-flex justify-content-start">                                        <button type="button" class="user-add-skill-cancel-btn" id="close" data-bs-dismiss="modal">                                            Cancel                                        </button>                                        <button type="button" id="skillSave" class="user-add-skill-save-btn">Save</button>                                    </div>                                </div>                            </div>                        </div>                    </div>                    <div class="d-flex justify-content-end mt-5">                        <button type="submit" class="user-profile-save-btn">Save</button>                    </div>                </div>            </div>        </form>    </div>    <hr>    <div class="container user-profile-footer d-flex align-items-center mb-4">        <partial name="_FooterPartial" />        <div class="user-profile-contact-us" data-bs-toggle="modal" data-bs-target="#exampleModal1">Contact Us</div>        <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">            <div class="modal-dialog">                <div class="modal-content">                    <div class="modal-header">                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Contact Us</h1>                        <button type="button" class=" bg-white border-0" data-bs-dismiss="modal" id="close1" aria-label="Close">                            <i class="bi bi-x-lg"></i>                        </button>                    </div>                    <form asp-action="SaveContactus" asp-controller="Home" method="post">                    <div class="modal-body">                                                <div class="container">                            <div class="row">
                                <div class="col-12 mb-3">                                    <label for="exampleFormControlTextarea1" class="form-label col-6">User Name</label>                                        <input type="text" value="@Model.username" class=" form-control  col-12 " placeholder="User Name" disabled>                                        <input type="hidden" asp-for="username" value=@Model.username class=" form-control  col-12 " placeholder="User Name">                                </div>                                <div class="col-12 mb-3">                                    <label for="exampleFormControlTextarea1" class="form-label col-6">Email</label>                                    <input type="email" value=@Model.email class=" form-control  col-12" placeholder="Email" disabled>                                        <input type="hidden" asp-for="email" value=@Model.email class=" form-control  col-12" placeholder="Email">                                </div>                                <div class="col-12 mb-3">                                    <label for="exampleFormControlTextarea1" class="form-label col-6">subject</label>                                    <input type="text" asp-for="subject" class=" form-control  col-12 " placeholder="subject">                                </div>                                <div class="col-12 mb-3">                                    <label for="exampleFormControlTextarea1" class="form-label col-6"> Message</label>                                                                       <textarea class="form-control col-12" placeholder="Message" asp-for="message"></textarea>                                </div>                                                      
                            </div>
                        </div>                                                                </div>                    <div class="modal-footer">                        <button type="button" class=" user-password-cancel-btn bg-white py-1 px-2" data-bs-dismiss="modal">                            Cancel                        </button>                        <button type="submit" class=" user-password-change-btn bg-white py-1">                           Save Details                        </button>                    </div>                    </form>                </div>            </div>        </div>    </div>    @*  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"    integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"    crossorigin="anonymous"></script>*@    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>    <script src="~/js/UserProfile.js" asp-append-version="true"></script></body></html>