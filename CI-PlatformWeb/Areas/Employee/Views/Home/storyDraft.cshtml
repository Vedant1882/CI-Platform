@{
    Layout = "_One-NavbarLayout";
    ViewData["Title"] = "Home Page";
}
@{
    var userid = Context.Session.GetInt32("userIDforfavmission");
    var firstname = Context.Session.GetString("UserID");
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing Page</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/landing-page.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/storyListing.css" asp-append-version="true" />






</head>

<body>

    <div class="container" style="margin-top:110px">

        <h1>Stories Draft For @firstname</h1>
        @*-----------------------------------------------------------------------------*@
        <div class="album py-5 bg-light mt-3">
            <div class="container" id="storydraftdiv">

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @if (ViewBag.storydraft.Count != 0)
                    {
                        @foreach (var item in Model)
                        {
                            <div class="col">
                                <div class="card shadow-sm" style="width:98%; height:100%;">
                                    <div class="img-event">
                                        @if (item.storypath != null)
                                        {
                                            <img class="card-img-top storyimg " id="cardBanner"
                                     src="@item.storypath" alt="Card image cap">
                                        }
                                        else
                                        {
                                            <img class="card-img-top storyimg" id="cardBanner"
                                     src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-1.png" alt="Card image cap">
                                        }


                                        <div class="ABC position-absolute top-0 start-0" style="height:100%; width:100%;">
                                            <a class="btn-view  rounded-5 p-1 px-4 position-absolute top-50 start-50 translate-middle" href="/Home/storyShare/@item.UserId?storyid=@item.StoryId">
                                                Edit Draft
                                                <i class="bi bi-arrow-right  "></i>

                                            </a>
                                        </div>
                                        <button class="theme-btn position-absolute top-100 start-50 translate-middle border-2" style="">@item.Theme</button>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-title">
                                            @item.StoryTitle
                                        </p>
                                        <div style="overflow: hidden;display: -webkit-box;-webkit-line-clamp:5;-webkit-box-orient: vertical;">
                                            <p class="card-text">
                                                @Html.Raw(item.Description)
                                            </p>
                                        </div>

                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex me-auto mt-2 align-items-center ">
                                                @if (item.avtarpath != "")
                                                {
                                                    <img src="@item.avtarpath" class="storyuserphoto" />
                                                }
                                                else
                                                {
                                                    <img src="~/Images/user1.png" class="storyuserphoto" />
                                                }

                                                <lable class="ms-2" id="">@item.UserName</lable>
                                            </div>
                                        </div>
                                        <i class="bi bi-trash bin" onclick="deletedraft(@item.StoryId,@item.UserId)"></i>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h1>No Draft Available</h1>
                    }




                </div>


            </div>
        </div>
        <hr />
        <partial name="_FooterPartial" />

</body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function viewdetails() {
        location.replace("Login.cshtml");
    }
    function deletedraft(storyId, userId) {

        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-danger'
            },
            buttonsStyling: true
        })

        swalWithBootstrapButtons.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this draft!",
            icon: 'warning',
            width: '300',
            height: '100',
            showCancelButton: true,
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Home/deleteDraft',
                    type: 'POST',
                    data: { storyId: storyId, userId: userId },

                    success: function (response) {

                        swalWithBootstrapButtons.fire(
                            'Deleted!',
                            'Your draft has been deleted.',
                            'success'
                        )
                        $('#storydraftdiv').html($(response).find('#storydraftdiv').html());


                    },
                    error: function () {
                        alert("could not comment");
                    }
                });

            } else if (
                /* Read more about handling dismissals below */
                result.dismiss === Swal.DismissReason.cancel
            ) {
                swalWithBootstrapButtons.fire(
                    'Cancelled',
                    
                )
            }
        })


    }
</script>
<script src="~/js/filter.js"></script>
<script src="~/js/Volunteering.js"></script>

</html>

