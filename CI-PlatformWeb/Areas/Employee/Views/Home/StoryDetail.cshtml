@{
    Layout = "_One-NavbarLayout";
    ViewData["Title"] = "Home Page";
}
@{
    var userid = Context.Session.GetInt32("userIDforfavmission");
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing Page</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/Volunteering.css" />
    <link rel="stylesheet" href="~/css/landing.css" />






</head>

<body>

    <div class="container" style="margin-top:150px">
        <div class="filters-section d-flex align-items-center flex-wrap justify-content-center">
        </div>
        <div class="row">

            <div class="col-12 col-lg-6 col-md-12 col-sm-12">
                <div class="container p-0">


                    @{
                        int num = 0;
                    }
                    @foreach (var media in ViewBag.storymedia)
                    {

                        @if (media.StoryType == "Video")
                        {
                            num++;
                            <div class="mySlides">
                                <div class="numbertext">@num/ @ViewBag.storymediacount</div>
                                <iframe class="img-fluid vol-page-crousel" id="vol-page-crousel"
                                src=@media.StoryPath style="height:355px;object-fit:cover;width:100%" alt=""></iframe>

                            </div>
                        }
                        else
                        {
                            num++;
                            <div class="mySlides">
                                <div class="numbertext">@num/ @ViewBag.storymediacount</div>
                                <img src="@media.StoryPath" style="height:355px;object-fit:cover;width:100%">
                            </div>
                        }
                    }


                    <!-- Next and previous buttons -->
                    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)">&#10095;</a>

                    <!-- Image text -->
                    <!-- Thumbnail images -->
                    <div class="row mt-1" style="flex-wrap: inherit;overflow-x: scroll;height:100px;">
                        @{
                            int num1 = 0;
                        }
                        @foreach (var media in ViewBag.storymedia)
                        {
                            num1++;
                            @if (media.StoryType == "Video")
                            {
                                <div class="col-6 col-lg-3 col-md-4" >
                                    <iframe src=@media.StoryPath title="W3Schools Free Online Web Tutorials" onclick="currentSlide(@num1)" style="overflow:hidden;width:100%;height:70px"></iframe>
                                </div>
                            }
                            else
                            {
                                <div class="col-6 col-lg-3 col-md-4">
                                    <img class="demo cursor" src="@media.StoryPath" style="width:100%;height:70px" onclick="currentSlide(@num1)" alt="Northern Lights">
                                </div>
                            }
                        }

                    </div>

                </div>
            </div>

   
            


            <div class="rightdiv  col-12 col-lg-6 col-md-12 col-sm-12 mt-4 mt-lg-0">
                @foreach (var story in Model)
                {
                    <div class="container ">
                        <div class="row mt-4 mt-md-2">
                            <div class="col-3 me-auto  ">
                                <div class=" d-flex justify-content-center">
                                    @if (story.avtarpath == "" || story.avtarpath == null)
                                    {
                                        <img src="~/Images/user1.png" class="storyuserimg rounded-circle">
                                    }
                                    else
                                    {
                                        <img src="@story.avtarpath" class="storyuserimg rounded-circle" style="height:70px;width:70px">
                                    }
                                </div>
                                <label class="fs-6 d-flex justify-content-center"> @story.UserName &nbsp;@story.LastName</label>
                            </div>
                            <div class="col-6 col-xl-3 col-md-4 mt-auto ">
                                <div class="rounded-5 border border-black d-flex justify-content-center w-100">
                                    <i class="bi bi-eye"></i><span class="ms-1">@story.viewcount</span><span class="ms-1">Views</span>
                                </div>

                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12 ">
                                @story.whyivolunteer

                            </div>
                        </div>
                        <div class="row justify-content-between mt-3">
                            @if (userid != null)
                            {
                                <button class="recom col-11 col-xl-6 col-md-5 col-lg-11 rounded-5 d-flex justify-content-center align-items-center bg-white py-2 ms-0 ms-xl-3 ms-lg-0 ms-md-3 " data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    <img src="~/images/add1.png">
                                    <span class="ms-2">Recomanded to Co-Worker</span>
                                </button>
                            }
                            else
                            {
                                <button class="recom col-11 col-xl-6 col-md-5 col-lg-11 rounded-5 d-flex justify-content-center align-items-center bg-white py-2 ms-0 ms-xl-3 ms-lg-0 ms-md-3 " onclick="alertforlogin()">
                                    <img src="~/images/add1.png">
                                    <span class="ms-2">Recomanded to Co-Worker</span>
                                </button>
                            }
                            <a class="col-11 col-xl-5  col-lg-11 col-md-5  bg-white text-decoration-none mt-2  mt-xl-0 mt-lg-2 mt-md-0  mb-2 mb-md-0 p-0" href="/Employee/Home/Volunteering/@ViewBag.UserId?missionid=@story.MissionId">
                                <button class="openmissionbtn    d-flex justify-content-center align-items-cente bg-white  rounded-5  py-2  w-100  ">
                                    <span class="">Open Mission</span>
                                    <img src="~/images/right-arrow.png" class="mt-1 ms-2">
                                </button>
                            </a>

                            <div class="modal fade  col-6" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Send Story to Friend</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body overflow-y-auto " style="height:200px;">
                                            @foreach (var user in ViewBag.alluser)
                                            {
                                                <div class=" userlistdiv align-items-center d-flex my-3">
                                                    @if (user.avtarpath == "" || user.avtarpath == null)
                                                    {
                                                        <img src="~/images/user1.png" class="rounded-5 me-5" style="border-radius:50%;width:50px;height:50px">

                                                    }
                                                    else
                                                    {

                                                        <img src="@user.avtarpath" class="rounded-5 me-5" style="border-radius:50%;width:50px;height:50px">
                                                    }
                                                    <label class=" ms-4  me-auto">   @user.UserName  @user.LastName </label>
                                                    <input class="form-check-input me-2 " type="checkbox" value="" id="@user.UserIdForMail" name="mail">
                                                </div>
                                            }
                                        </div>
                                        <div class="modal-footer">

                                            <div class="text-center">
                                                <a class="btn mt-2 landing-page-apply-mission-btn" data-bs-dismiss="modal">
                                                    Close
                                                </a>
                                            </div>
                                            <div class="text-center">
                                                <a class="btn mt-2 landing-page-apply-mission-btn" id="sendmail" onclick="sendmail(@story.StoryId)">
                                                    Send Mission
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                    </div>
                }
            </div>

        </div>
        <div class="text-break">
            @foreach (var story in Model)
            {
                <h1>@story.StoryTitle</h1>
                <p class="text-break">@Html.Raw(story.Description)</p>
            }
        </div>

    </div>



    <hr style="border:1px solid black" />

    @*-----------------------------------tab and volunteer----------------------------*@

</body>
<script src="~/js/Volunteering.js"></script>
<script>
    function sendmail(id) {
        const mail = Array.from(document.querySelectorAll('input[name="mail"]:checked')).map(el => el.id);
        var send = document.getElementById("sendmail");
        Swal.fire({
            icon: 'info',
            title: 'Sending',
            text: 'Sending Mail....',
            showConfirmButton: false,

        })
        $.ajax({
            url: '/Employee/Home/SendmailForStory',
            type: 'POST',
            data: { userid: mail, id: id },
            success: function (result) {

                const checkboxes = document.querySelectorAll('input[name="mail"]:checked');
                checkboxes.forEach((checkbox) => {
                    checkbox.checked = false;
                });
                Swal.fire({
                    icon: 'success',
                    title: 'Sent',
                    text: 'Recommandation sent succesfully',
                    showConfirmButton: false,
                    timer: 2000
                })
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!',

                })
            }
        });

    }
    function alertforlogin() {
        Swal.fire({
            position: 'top-end',
            icon: 'warning',
            width: '300',
            height: '100',
            title: 'Please Login or Register First',
            showConfirmButton: false,
            timer: 1500
        })
    }
    function onImageChange(imgCount) {
        var img = document.getElementById("vol-page-crousel");
        var subImage = document.getElementsByClassName(`vol-img-change-${imgCount}`);
        img.src = subImage[0].src
    }

</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</html>




