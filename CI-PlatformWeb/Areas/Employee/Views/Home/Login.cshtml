@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="D:\TatvaSoft\CI-Platform\CI-PlatformWeb\wwwroot\css\bootstrap.min.css">
    <link rel="stylesheet" href=" ~ /css/login-page.css" asp-apend-version="true">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

</head>
<body>
    @if (TempData["reg"] != null)
    {
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script type="text/javascript">


            toastr.success('@TempData["reg"]');


        </script>
    }
    @if (TempData["Done"] != null)
    {
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script type="text/javascript">


            toastr.info('@TempData["Done"]');


        </script>
    }
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12 mt-2">
                <div id="carouselExampleCaptions" style="height:98vh" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
                   
                    <div class="carousel-inner" style="height:98vh">
                        @foreach (var banner in ViewBag.firstBanner)
                        {
                            <div class="carousel-item active" data-bs-interval="5000">
                                <img src="@banner.Image" class="d-block w-100 carousel-img object-fit-none" alt="..." style="height:98vh">
                                <div class="carousel-caption d-none d-md-block ">
                                    <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                    <p>
                                        @banner.Text
                                    </p>
                                </div>
                            </div>
                        }
                        @foreach (var banner in ViewBag.Banners)
                        {
                            <div class="carousel-item" data-bs-interval="5000">
                                <img src="@banner.Image" class="d-block w-100 carousel-img object-fit-none " alt="..." style="height:98vh">
                                <div class="carousel-caption d-none d-md-block ">
                                    <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                    <p>
                                        @banner.Text
                                    </p>
                                </div>
                            </div>
                        }


                    </div>
                     <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="side-div col-lg-4 col-md-12 col-sm-12 col-xs-12 mt-2 align-self-center">
                <div class="row justify-content-center ">
                    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                        @{
                            if (TempData["LoginReq"] != null)
                            {
                                <span class="text-danger ms-2">Please Login First</span>
                            }
                        }
                        <form asp-controller="Home" asp-action="Login" asp-area="Employee" method="post" class="form-horizontal" role="form">
                            <div>
                                <div class="mb-5 text-danger" id="viewbag">@ViewBag.email</div>
                                <label asp-for="Email" class="form-label">Email address</label>
                                <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email address" onkeyup="emailchange()">
                                <span asp-validation-for="Email" class="text-danger" id="email1"></span>
                            </div>
                            <div class="mt-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter Password" onkeyup="passchange()">
                                <span asp-validation-for="Password" class="text-danger" id="password"></span>
                            </div>
                            <div class="mt-3">
                                <input type="Submit" value="Login" class="btn mt-3">

                            </div>
                            <div class="text-center mt-2">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ForgetPass">ForgotPassword?</a>
                            </div>
                            <div class="text-center mt-2">
                                <div class="create-account-link-1">
                                    <span>Don't have an account?</span>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                                </div>
                                <div class="create-account-link-2">
                                    <div class="mt-3 text-center">
                                        <span>Don't have an account?</span>
                                    </div>
                                    <div class="mt-1 text-center">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                                    </div>

                                </div>
                            </div>
                            <div class="text-center mt-3 align-bottom">
                                <span><a asp-action="PrivacyPolicy" asp-controller="Home">Privacy Policy</a></span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
    <script>
        function emailchange() {
            document.getElementById("email1").style.display = "none";
            document.getElementById("viewbag").style.display = "none"
        }
        function passchange() {
            document.getElementById("password").style.display = "none";
            document.getElementById("viewbag").style.display = "none"
        }
    </script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
